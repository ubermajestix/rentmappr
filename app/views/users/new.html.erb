<div class="session">

	<%= link_to (image_tag '/images/logo.png'), root_path, :class=>"logo" %>
	
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><label for="login">Login</label><br/>
<%= f.text_field :login, :class=>"large_input" %></p>

<p><label for="email">Email</label><br/>
<%= f.text_field :email, :class=>"large_input" %></p>

<p><label for="password">Password</label><br/>
<%= f.password_field :password, :class=>"large_input" %></p>

<p><label for="password_confirmation">Confirm Password</label><br/>
<%= f.password_field :password_confirmation, :class=>"large_input" %></p>

<p><label for="planet">what planet do you live on?</label><br/>
<%= text_field_tag :planet, nil, :class=>"large_input" %></p>
<div style="font-size:10.5px; position:absolute; margin-top:-35px; left:200px;">hint:  <%= image_tag '/images/earth.png', :size=>"50x50", :title=>"erf" %></div>

<p><%= submit_tag 'Sign up' %></p>
<% end -%><br/>
<%= link_to "login", login_path %></div>
