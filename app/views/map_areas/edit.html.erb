<h1>Editing map_area</h1>

<div class="session"><% form_for @map_area  do |a|%>
<p>name: <br/>
<%= a.text_field :name, :class=>"large_input" %></p>

<p>craigslist <br/>
<%= a.text_field :craigslist, :class=>"large_input",:size=>30 %>/
<%= a.text_field :region,     :class=>"large_input", :size=>5 %></p>

<p>address (city, st)<br/>
<%= a.text_field :address, :class=>"large_input" %></p>

<p>records expire in: <%= a.text_field :expires_in, :size=>5, :class=>"large_input" %> days </p>


<div style="position:absolute; left:310px">
	lat:<%= a.text_field :lat, :size=>15, :class=>"large_input" %> <br/>
	lng:<%= a.text_field :lng, :size=>15, :class=>"large_input" %> <br/>
	center: (<%= @map_area.center_lat %>, <%= @map_area.center_lng %>)
	
</div>

<div id="map" style="width: 300px; height: 300px; cursor:crosshair"></div>

<%= submit_tag "submit"%>
<% end%>
</div>


<%= link_to 'Back', :action=>:index %>
