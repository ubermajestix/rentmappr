<div id="bug" style="margin:20px; background: #fff; width:600px; padding:20px">
	<h3>File a bug/feature request </h3>
	bug or feature request? <br/>
		<%= select_tag :type, options_for_select(['bug', 'feature request']), :class=>"large_input"%>
	<% form_tag file_bug_report_path do%>
	<label>title:</label><br/>
	<%= text_field_tag :title, @title, :class=>"large_input", :size=>50 %><br/>
	<label>comments:</label><br/>
	<%= text_area_tag :body, @body, :class=>"large_input", :cols=>54, :rows=>15 %><br/>
	<% if not logged_in? %>
		your email address:<span class="little"> (so we can send you a note when we've fixed your bug or added your feature) </span><br/>
		<%= text_field_tag :email, @email, :class=>"large_input", :size=>50 %><br/>
	<% end %>
	<p><label for="planet">what planet do you live on?</label><br/>
	<%= text_field_tag :planet, nil, :class=>"large_input" %></p>
	<div style="font-size:10.5px; position:absolute; margin-top:-35px; left:200px;">hint:  <%= image_tag '/images/earth.png', :size=>"50x50", :title=>"erf" %></div><br/>
	


	<%= submit_tag "submit"%>
	<% end%>
</div>